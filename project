@bot.callback_query_handler(func= lambda call: call.data == "deny")
def deny(call: CallbackQuery):

    pattern = r"Ø¢ÛŒØ¯ÛŒ Ú©Ø§Ø±Ø¨Ø±: \d+"
    user = re.findall(pattern=pattern, string=call.message.text)[0].split()[2]
    
    markup = InlineKeyboardMarkup()
    button = InlineKeyboardButton(text="Ø¨Ø§ Ù…ÙˆÙÙ‚ÛŒØª Ø±Ø¯ Ø´Ø¯", callback_data="skdfhksjh")
    markup.add(button)
    bot.edit_message_reply_markup(chat_id=call.message.chat.id, message_id=call.message.message_id, reply_markup=markup)
    
    bot.send_message(chat_id=int(user), text="Ø¯Ø±Ø®ÙˆØ§Ø³Øª Ø´Ù…Ø§ Ø±Ø¯ Ø´Ø¯")
    
